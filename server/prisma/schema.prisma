generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  username    String    @unique
  email       String    @unique
  passwordHash String
  avatarUrl   String?
  createdAt   DateTime  @default(now())

  recipes     Recipe[]
  favorites   Favorite[]
  ratings     Rating[]
}

model Category {
  id     String  @id @default(uuid())
  name   String  @unique
  emoji  String?
  recipes Recipe[]
}

model Mood {
  id     String  @id @default(uuid())
  name   String  @unique
  emoji  String?
  recipes RecipeMood[]
}

model Recipe {
  id           String             @id @default(uuid())
  title        String
  imageUrl     String?
  cookTimeMin  Int
  description  String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  authorId     String?
  author       User?              @relation(fields: [authorId], references: [id])

  categoryId   String?
  category     Category?          @relation(fields: [categoryId], references: [id])

  steps        RecipeStep[]
  ingredients  RecipeIngredient[]
  moods        RecipeMood[]
  favorites    Favorite[]
  ratings      Rating[]
}

model Ingredient {
  id    String  @id @default(uuid())
  name  String  @unique
  used  RecipeIngredient[]
}

model RecipeIngredient {
  recipeId     String
  ingredientId String
  quantity     Float?
  unit         String?

  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])

  @@id([recipeId, ingredientId])
}

model RecipeStep {
  id        String  @id @default(uuid())
  recipeId  String
  position  Int
  text      String

  recipe    Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId, position])
}

model RecipeMood {
  recipeId String
  moodId   String
  weight   Int      @default(1)

  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  mood     Mood   @relation(fields: [moodId], references: [id], onDelete: Cascade)

  @@id([recipeId, moodId])
}

model Favorite {
  userId   String
  recipeId String
  createdAt DateTime @default(now())

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe  Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@id([userId, recipeId])
}

model Rating {
  userId   String
  recipeId String
  stars    Int
  createdAt DateTime @default(now())

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe  Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@id([userId, recipeId])
}


